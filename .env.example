# LinkedIn OAuth2 Application Credentials
# Get these from https://developer.linkedin.com/
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:8000/auth/callback

# Scopes (space-separated)
LINKEDIN_SCOPES=openid profile email w_member_social r_member_social

# LinkedIn API version (YYYYMM format)
LINKEDIN_API_VERSION=202601

# FastAPI server
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Token storage file path
TOKEN_STORE_PATH=token_store.json
